{
  "name": "eternavault",
  "version": "1.0.0",
  "description": "Your personal fortress for digital privacy - secure journal, passwords, 2FA codes, and encrypted files",
  "main": "main.js",
  "author": "EternaVault",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "publish": "electron-builder --win --publish always"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  },
  "build": {
    "appId": "com.eternavault.app",
    "productName": "EternaVault",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "jsqr.min.js",
      "icon.png",
      "tray-icon.png",
      "tray-icon@2x.png",
      "dev-app-update.yml"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "EternaVault-Setup-${version}.exe"
    },
    "portable": {
      "artifactName": "EternaVault-Portable.exe"
    },
    "publish": {
      "provider": "github",
      "owner": "wutev",
      "repo": "eternavault",
      "releaseType": "release"
    }
  }
}
